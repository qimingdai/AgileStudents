<view class="mcontainer">
  <view class="item">
    <image src="/image/logo.png" class="png"></image>
  </view>
  <view class="item">
    <view calss="login-item">
      <view class="login-item-info">用户名</view>
      <view><input bindtap='usernameInput'></input></view>
    </view>
    <view class="login-item">
      <view class='login-item-info'>密码</view>
      <view class="login-pwd">
        <input style='flex-grow:1' password='true' bindinput='passwordInput'></input>
      </view>
    </view>
  </view>
  <view class='item bottom-info'>
    <button class='login-btn' bindtap='loginBtnClick'>登录</button>
  </view>
</view>